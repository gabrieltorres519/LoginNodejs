    <div class="container w-75 bg-primary mt-5 rounded shadow">
        <div class="row align-items-stretch">
          
          <div class="col bg d-none d-lg-block">
    
          </div>
            
          <div class="col bg-white p-5 rounded-end">
            <div class="text-center">
              <img src="../public/newshield.png" width="48" alt="">
            </div>
            <h2 class="fw-bool text-center pt-5 mb-2 bg-dark"  style="color:#ffffff">Bienvenido</h2>
            <h2 class=" text-center bg-dark"  style="color:#ffffff">Regístrate</h2>
            <h2 class=" text-center " > - </h2>
            <h2 class="fw-bool text-center pt-6 mb-2" style="color:#000000">SignUp</h2>
    
              <% if (!user) { %>
              <a href="/signin" style="color:#000000">LogIn</a>
              <a href="/signup" style="color:#000000">SignUp</a>
              <% } else { %>
              <a href="/logout">Logout</a>
              <a href="/profile">Profile</a>
              <% } %>
              
              <%if (signinMessage) {%>
                <p><%= signinMessage %></p>
              <% } %>
              <%if (signupMessage) {%>
                <p><%= signupMessage %></p>
              <% } %>
    
               <!-- Formulario del registro -->
              <form action="/signup" method="post">
                <!-- <div class="mb-4">
                  <label for="name" class="form-label" style="color:#000000">Nombre</label>
                  <input type="text" class="form-control" name="name" placeholder="nombre">
                </div> -->
                <div class="mb-4">
                  <label for="email" class="form-label" style="color:#000000">Correo electrónico</label>
                  <input type="email" class="form-control" name="email" placeholder="email@email.com">
                </div>
                <div class="mb-4">
                  <label for="password" class="form-label" style="color:#000000">Contraseña</label>
                  <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div class="mb-4">
                    <label for="name" class="form-label" style="color:#000000">Nombre</label>
                    <input type="text" name="name" placeholder="Inserte su nombre">
                </div>
                <div class="mb-4">
                    <label for="phone" class="form-label" style="color:#000000">Teléfono</label>
                    <input type="number" name="phone" placeholder="Inserte su número">
                </div>
                <div class="mb-4">
                    <label for="profile" class="form-label" style="color:#000000">Perfil</label>
                    <input type="text" name="profile" placeholder="Seleccione su tipo de usuario">
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-dark w3-button w3-deep-purple">
                    Registrarse
                  </button>
                </div>
                <div class="mb-4">
    
                </div>
              </form>
    
            </form>
          </div>
        </div>
      </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
</body>
</html>

